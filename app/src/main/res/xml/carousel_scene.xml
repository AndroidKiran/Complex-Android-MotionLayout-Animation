<?xml version="1.0" encoding="utf-8"?>
<MotionScene

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">


	<Transition android:id="@+id/startToSecond"
		app:constraintSetStart="@id/startPos"
		app:constraintSetEnd="@id/secondPos"
		app:duration="500"
		>


		<OnSwipe app:dragDirection="dragLeft"
			app:touchAnchorId="@id/v1"
			/>

	</Transition>

	<Transition android:id="@+id/secondToThird"
		app:constraintSetStart="@id/secondPos"
		app:constraintSetEnd="@id/thirdPos"
		app:duration="500"
		>

		<OnSwipe app:dragDirection="dragLeft"
			app:touchAnchorId="@id/v2"
			/>

	</Transition>

	<Transition android:id="@+id/thirdToLast"
		app:constraintSetStart="@id/thirdPos"
		app:constraintSetEnd="@id/lastPos"
		app:duration="500"
		>

		<OnSwipe app:dragDirection="dragLeft"
			app:touchAnchorId="@id/v3"
			/>

	</Transition>


	<!-- first and second visible -->
	<ConstraintSet android:id="@+id/startPos">

		<Constraint android:id="@+id/v1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v2"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v1"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="120"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>
	</ConstraintSet>

	<!-- first on the left second in center and third right -->
	<ConstraintSet android:id="@+id/secondPos">
		<Constraint android:id="@+id/v1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"
			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v2"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v2"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v3"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v2"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="120"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v4"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v2"
			app:layout_constraintCircleRadius="500dp"
			app:layout_constraintCircleAngle="120"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

	</ConstraintSet>

	<!-- second on the left third in center and 4th right -->
	<ConstraintSet android:id="@+id/thirdPos">

		<Constraint android:id="@+id/v1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"


			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v3"
			app:layout_constraintCircleRadius="500dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v2"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v3"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint android:id="@+id/v3"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint android:id="@+id/v4"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v3"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="120"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

	</ConstraintSet>

	<!-- third and 4th visible -->
	<ConstraintSet android:id="@+id/lastPos">

		<Constraint android:id="@+id/v1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v4"
			app:layout_constraintCircleRadius="500dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/v2"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v4"
			app:layout_constraintCircleRadius="500dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint android:id="@+id/v3"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/v4"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="240"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint android:id="@+id/v4"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>


	</ConstraintSet>

</MotionScene>