		<Constraint android:id="@+id/pizza1"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

		<Constraint android:id="@+id/name1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"

			android:alpha="1"

			app:layout_constraintTop_toBottomOf="@id/pizzaViewsBounds"
			app:layout_constraintStart_toStartOf="@id/pizzaViewsBounds"
			app:layout_constraintEnd_toEndOf="@id/pizzaViewsBounds"
			/>

		<Constraint android:id="@+id/pizza2"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:layout_marginTop="24dp"

			android:rotation="50"

			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintCircle="@id/pizza1"
			app:layout_constraintCircleRadius="300dp"
			app:layout_constraintCircleAngle="120"

			app:layout_constraintTop_toBottomOf="@id/tvPizzaChip"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"

			/>

	</ConstraintSet>

